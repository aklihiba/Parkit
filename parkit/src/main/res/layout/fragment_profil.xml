<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frameLayout3"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Authentification.Profil" >

        <ImageView
            android:id="@+id/profilImage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:scaleType="fitXY"
            android:src="@drawable/profile"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/view"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="260dp"
        android:background="@drawable/round_top_bg"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/profilImage" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/editPicture"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_marginTop="28dp"
        android:layout_marginEnd="28dp"
        android:src="@drawable/ic_create"
        android:backgroundTint="@color/yellow"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="SpeakableTextPresentCheck"
        />

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/EMAIL"
        android:layout_width="300dp"
        android:layout_height="55dp"

        android:layout_marginTop="30dp"
        app:cardBackgroundColor="@color/bg"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/view">

        <TextView
            android:id="@+id/email"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="18dp"
            android:text="email"
            android:textColor="@color/gris_clair"
            android:textSize="16dp" />

    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/editNAME"
        android:layout_width="300dp"
        android:layout_height="55dp"
        android:layout_marginTop="20dp"
        app:cardBackgroundColor="@color/bg"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/EMAIL">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/editName"
            android:hint="nom"
            android:textColorHint="@color/gris_clair"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            />
        <TextView
            android:id="@+id/nom"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="18dp"
            android:textSize="16dp"
            android:text="nom"
            android:textColor="@color/gris_clair" />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingEnd="10dp"
            android:paddingStart="270dp"
            android:paddingTop="20dp"
            android:src="@drawable/ic_create"
            app:tint="@color/gris_clair"
            />
    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/editPRENOM"
        android:layout_width="300dp"
        android:layout_height="55dp"
        android:layout_marginTop="20dp"
        app:cardBackgroundColor="@color/bg"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editNAME">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/editPrenom"
            android:hint="prenom"
            android:textColorHint="@color/gris_clair"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            />

        <TextView
            android:id="@+id/prenom"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="18dp"
            android:textSize="16dp"
            android:text="prenom"
            android:textColor="@color/gris_clair" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingEnd="10dp"
            android:paddingStart="270dp"
            android:paddingTop="20dp"
            android:src="@drawable/ic_create"
            app:tint="@color/gris_clair"
            />
    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/editNUMPHONE"
        android:layout_width="300dp"
        android:layout_height="55dp"
        android:layout_marginTop="20dp"
        app:cardBackgroundColor="@color/bg"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editPRENOM">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/editNumero"
            android:hint="téléphone"
            android:textColorHint="@color/gris_clair"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            />
        <TextView
        android:id="@+id/telephone"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="18dp"
        android:textSize="16dp"
        android:text="téléphone"
        android:textColor="@color/gris_clair" />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingEnd="10dp"
            android:paddingStart="270dp"
            android:paddingTop="20dp"
            android:src="@drawable/ic_create"
            app:tint="@color/gris_clair"
            />
    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/editPWD"
        android:layout_width="300dp"
        android:layout_height="55dp"
        android:layout_marginTop="20dp"
        app:cardBackgroundColor="@color/bg"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editNUMPHONE">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/editPwd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:hint="mot de passe"
            android:textColorHint="@color/gris_clair"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/pwd"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="18dp"
            android:text="mot de passe"
            android:textColor="@color/gris_clair"
            android:textSize="16dp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingStart="270dp"
            android:paddingTop="20dp"
            android:paddingEnd="10dp"
            android:src="@drawable/ic_create"
            app:tint="@color/gris_clair" />
    </com.google.android.material.card.MaterialCardView>

    <ProgressBar
        android:id="@+id/progressB"
        style="?android:attr/progressBarStyle"
        android:layout_width="61dp"
        android:layout_height="48dp"
        android:layout_marginBottom="672dp"
        android:backgroundTint="@color/yellow"
        app:layout_anchorGravity="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/modifier"
        style="@style/Widget.MaterialComponents.Button"
        app:backgroundTint="@color/yellow"
        app:cornerRadius="25dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="52dp"
        android:text="valider"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editPWD" />

    <Button
        android:id="@+id/annuler"
        style="@style/Widget.MaterialComponents.Button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="30dp"
        android:text="annuler"
        app:backgroundTint="@color/gris"
        app:cornerRadius="25dp"
        app:layout_constraintEnd_toStartOf="@+id/modifier"
        app:layout_constraintTop_toBottomOf="@+id/editPWD" />

</androidx.constraintlayout.widget.ConstraintLayout>


