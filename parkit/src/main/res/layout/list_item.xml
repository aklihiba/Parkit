<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cadre"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/card_tile"
    android:layout_margin="10dp">

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/parking_image"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginStart="16dp"
        android:adjustViewBounds="true"
        android:scaleType="centerCrop"
        android:src="@drawable/parking1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/occupation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="90%"
        android:textColor="@color/design_default_color_error"
        android:textSize="12dp"
        app:layout_constraintStart_toEndOf="@+id/etat"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/etat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginTop="0dp"
        android:text="ferme "
        android:textColor="@color/design_default_color_error"
        android:textSize="12dp"
        app:layout_constraintStart_toEndOf="@+id/parking_image"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/nom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginTop="4dp"
        android:text="Parking du marchÃ©"
        android:textColor="#3E3D3D"
        app:layout_constraintStart_toEndOf="@+id/parking_image"
        app:layout_constraintTop_toBottomOf="@+id/etat" />

    <TextView
        android:id="@+id/adresse"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginTop="4dp"
        android:text="Bab Ezzeouar"
        android:textColor="#6E6E6E"
        android:textSize="12dp"
        app:layout_constraintStart_toEndOf="@+id/parking_image"
        app:layout_constraintTop_toBottomOf="@+id/nom" />

    <ImageView
        android:id="@+id/car_icon"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="4dp"
        app:layout_constraintStart_toEndOf="@+id/parking_image"
        app:layout_constraintTop_toBottomOf="@+id/adresse"
        app:srcCompat="@drawable/voiture" />

    <TextView
        android:id="@+id/distance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginTop="4dp"
        android:text="8,56 Km"
        android:textColor="#1565C0"
        android:textSize="10dp"
        app:layout_constraintStart_toEndOf="@+id/car_icon"
        app:layout_constraintTop_toBottomOf="@+id/adresse" />

    <TextView
        android:id="@+id/temps_trajet"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginTop="4dp"
        android:text="14 min"
        android:textColor="#1565C0"
        android:textSize="10dp"
        app:layout_constraintStart_toEndOf="@+id/distance"
        app:layout_constraintTop_toBottomOf="@+id/adresse" />
</androidx.constraintlayout.widget.ConstraintLayout>